<main class="container forms-container">
    <h1><%- pageTitle %></h1>
    <form class="default-form edit-picture" method="POST" enctype="multipart/form-data">
        <legend>Upload your image which will be displayed next to your name and bio.</legend>
        <div class="field send-btn">
            <label for="files" id="file-label">Picture  <span>(Max: 10MB)</span></label>
            <input id="files" type="file" name="image">
        </div>
        <% if(user.image){ %>
        <div class="field">
            <label class="img-label" for="">Actual image</label>
            <img src="/uploads/profiles/<%= user.image %>" width="400" alt="Group Image">
        </div>
        <% } else { %>
            <p class="user-p">No image has been uploaded yet.</p>
        <% } %>
        <div class="field send">
            <input class="btn btn-pink" type="submit" value="Upload Picture">
        </div>
    </form>
</main>